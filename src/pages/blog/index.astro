---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
};
---

<BaseLayout
  title="Blog - Martin Patino"
  description="Articles about software engineering, cloud architecture, serverless applications, and web development."
>
  <div class="max-w-3xl mx-auto px-6 py-20 sm:py-32">
    <div class="mb-20">
      <h1 class="text-5xl sm:text-7xl font-bold text-gray-900 dark:text-gray-100 mb-4 tracking-tight">
        Writing
      </h1>
      <div class="h-1 w-20 bg-gradient-to-r from-primary-600 to-primary-400 dark:from-primary-400 dark:to-primary-600 rounded-full"></div>
    </div>

    {
      sortedPosts.length > 0 ? (
        <ul class="space-y-10">
          {sortedPosts.map((post) => (
            <li class="group">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-4 mb-3">
                  <time
                    datetime={post.data.date.toISOString()}
                    class="text-gray-500 dark:text-gray-500 text-base sm:min-w-[140px] font-light"
                  >
                    {formatDate(post.data.date)}
                  </time>
                  <h2 class="text-2xl sm:text-3xl font-semibold text-gray-900 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                    {post.data.title}
                  </h2>
                </div>
                <p class="text-gray-600 dark:text-gray-400 sm:ml-[156px] text-lg leading-relaxed">
                  {post.data.description}
                </p>
              </a>
            </li>
          ))}
        </ul>
      ) : (
        <p class="text-gray-600 dark:text-gray-400 text-xl">
          No posts yet. Check back soon!
        </p>
      )
    }
  </div>
</BaseLayout>
