---
import BaseLayout from '@layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist." noindex={true}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-32 text-center">
    <div class="mb-8">
      <Icon name="lucide:file-question" class="w-24 h-24 mx-auto text-primary-600 dark:text-primary-400" />
    </div>
    <h1 class="text-6xl sm:text-7xl font-bold text-gray-900 dark:text-gray-100 mb-4">404</h1>
    <h2 class="text-2xl sm:text-3xl font-semibold text-gray-700 dark:text-gray-300 mb-4">
      Page Not Found
    </h2>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-md mx-auto">
      Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
    </p>
    <div class="flex flex-wrap gap-4 justify-center">
      <a href="/" class="btn">
        <Icon name="lucide:home" class="w-5 h-5" />
        Go Home
      </a>
      <a href="/blog" class="btn btn-secondary">
        <Icon name="lucide:book-open" class="w-5 h-5" />
        Read Blog
      </a>
    </div>
  </div>
</BaseLayout>
