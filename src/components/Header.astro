---
import { siteConfig } from '../config';
import { Icon } from 'astro-icon/components';

const currentPath = Astro.url.pathname;
---

<header class="fixed top-2 sm:top-4 left-1/2 -translate-x-1/2 z-50 w-auto">
  <nav
    class="flex items-center gap-1 sm:gap-2 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm rounded-full px-2 sm:px-4 py-2 border border-gray-200 dark:border-gray-800 shadow-lg"
  >
    {
      siteConfig.navigation.map((link) => (
        <a
          href={link.href}
          class:list={[
            'px-3 py-1.5 rounded-full text-sm font-medium transition-all',
            currentPath === link.href
              ? 'bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300'
              : 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-800',
          ]}
        >
          {link.label}
        </a>
      ))
    }
    <button
      id="theme-toggle"
      type="button"
      aria-label="Toggle theme"
      class="ml-2 p-2 rounded-full text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-all"
    >
      <Icon name="lucide:sun" class="w-5 h-5 dark:hidden" />
      <Icon name="lucide:moon" class="w-5 h-5 hidden dark:block" />
    </button>
  </nav>
</header>
